<div class="container blog-container">
    <div class="row">
        <div class="col-md-12">
            <div class="post">
                <header class="blog-post-header">
                    <h1 class="post-title">{{ model.title }}</h1>
                    <p class="post-meta">Published on {{model.date}} {{#if model.author}} by {{model.author}}{{/if}}</p>
                </header>
                <article class="post-content">
                    {{ blogHtml }}
                </article>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button {{on "click" this.toggleLike}} style="outline: none; border:none" class="like-button">
            {{#if isLiked}}
